<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="18dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_line_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_size30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cl_up_nearby_notification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_line_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_line_number"
        app:layout_constraintEnd_toEndOf="@+id/iv_line_number"
        app:layout_constraintStart_toStartOf="@+id/iv_line_number"
        app:layout_constraintTop_toTopOf="@+id/iv_line_number" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_up_nearby_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintEnd_toStartOf="@+id/cl_down_nearby_notification"
        app:layout_constraintStart_toEndOf="@+id/iv_line_number"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_up_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대화 방면"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_up_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="도착까지 "
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_up_direction" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_up_arrival_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o분"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_up_arrival_time"
            app:layout_constraintStart_toEndOf="@+id/tv_up_arrival_time"
            app:layout_constraintTop_toTopOf="@+id/tv_up_arrival_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_up_congestion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/congestion"
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_up_arrival_time" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_up_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/circle_size14"
            app:layout_constraintBottom_toBottomOf="@+id/tv_up_congestion_title"
            app:layout_constraintStart_toEndOf="@+id/tv_up_congestion_title"
            app:layout_constraintTop_toTopOf="@+id/tv_up_congestion_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_up_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/percentage"
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_up_congestion_title"
            app:layout_constraintStart_toEndOf="@+id/iv_up_congestion"
            app:layout_constraintTop_toTopOf="@+id/tv_up_congestion_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_down_nearby_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cl_up_nearby_notification"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_down_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오금 방면"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_down_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="도착까지 "
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_down_direction" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_down_arrival_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o분"
            android:textColor="@color/blue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_down_arrival_time"
            app:layout_constraintStart_toEndOf="@+id/tv_down_arrival_time"
            app:layout_constraintTop_toTopOf="@+id/tv_down_arrival_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_down_congestion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/congestion"
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_down_arrival_time" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_down_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/circle_size14"
            android:tint="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/tv_down_congestion_title"
            app:layout_constraintStart_toEndOf="@+id/tv_down_congestion_title"
            app:layout_constraintTop_toTopOf="@+id/tv_down_congestion_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_down_congestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/percentage"
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_down_congestion_title"
            app:layout_constraintStart_toEndOf="@+id/iv_down_congestion"
            app:layout_constraintTop_toTopOf="@+id/tv_down_congestion_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>